<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#3FA2F0" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:right="1dp">
        <shape>
            <solid android:color="@android:color/white" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
</layer-list>